{
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "removeComments": false,
    "importHelpers": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "target": "ES5",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "declarationDir": "bin/dts",
    "declaration": true
  },
  "include": [
    "src/index.ts"
  ]
}
